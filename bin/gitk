#!/bin/bash

SCRIPT_DIR="$(cd "$(dirname "$0")"/../scripts && pwd)"
CMD="$1"
shift

if [ -z "$CMD" ]; then
    echo "Команда не указана. Пример использования: gitk init"
    exit 1
fi

TARGET="$SCRIPT_DIR/gitk-$CMD"

if [ ! -f "$TARGET" ]; then
    echo "Неизвестная команда: $CMD"
    echo "Доступные команды: $(ls "$SCRIPT_DIR" | sed 's/^gitk-//' | tr '\n' ' ')"
    exit 1
fi


exec "$TARGET" "$@"
